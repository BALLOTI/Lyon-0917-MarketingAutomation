{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Home {% endblock %}
{% block body %}
    <div class="center-align">
        <div class="row">
            <div class="col s12 m8 offset-m2 l6 offset-l3">
                <h1 class="search_bar">Homepage</h1>
                <a href="https://placeholder.com"><img src="http://via.placeholder.com/350x150"></a>
            </div>
        </div>
    </div>

    <div class="center-align">
        <div class="row">
            <div class="col s12 m8 offset-m2 l6 offset-l3">
                <div class="card-panel grey lighten-5 z-depth-1">
                    <form id="search-site" action='search' method='get'>
                        <div class="input-group">
                            <div class="input-field">
                                <input id="search" type="search" name='search'
                                       placeholder="Ecrivez ici votre recherche...">
                                <a class="waves-effect waves-light btn-large"><i class="large material-icons right">search</i>Rechercher</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}