{% extends 'base.html.twig' %}
{% block title %}{{ softmain.name }} - logiciel de marketing automation {% endblock %}
{% block metadesc %}{{ softmain.name }} {{ softmain.description[:60] }}. {% endblock %}

            {% block h1 %}
                <h1 id="softwareh1">{{ softmain.name }}</h1>
                <p id="tagOnSoft">
                        {% for tag in softmain.tags  %}
                            <a href="{{ path('tagSolo') }}">{{ tag.name }}</a>
                        {% if loop.last == false %}, {% endif %}
                    {% endfor %}
                </p>
            {% endblock %}
{% block body %}

    <div id="software">

        <div class="row">
            <div class="col m3 s12 l3">
                <img src="{{ asset('assets/img/logo/') }}{{ softmain.slug }}.png" height="250"
                     width="250" class="responsive-img">
            </div>
            <div class="col m9 s12">
                <p>{{ softmain.description }}</p>
            </div>
        </div>
        <h2>Notre commentaire sur {{ softmain.name }}</h2>
        <p>{{ softmain.comments }}</p>

        <h2>Informations générales sur {{ softmain.name }}</h2>

        {% include 'table-software-identity.html.twig' %}

        <h2>Canaux de communication inbound de {{ softmain.name }}</h2>

        {% include 'table-software-inbound.html.twig' %}


        <h2>Canaux de communication outbound de {{ softmain.name }}</h2>

        {% include 'table-software-outbound.html.twig' %}


        <h2>Autres fonctionnalités de {{ softmain.name }}</h2>

        {% include 'table-software-functions.html.twig' %}


        <div class="row">
            <div class="col m12 s12 l12">
                <h2>Une question sur {{ softmain.name }} ? Contactez-nous !</h2>
                <p>Formulaire à nous fournir.</p>

            </div>
        </div>

        <h2>Voir d'autres logiciels de marketing automation :</h2>
        <div class="row">

            {% for software in softwares %}
                {% include('software-card.html.twig') %}
            {% endfor %}


        </div>
        </p>
        <h2>Comparer MailChimp avec d'autres logiciels de marketing automation</h2>
        <div class="row">
                        {% for software in softwares %}
                            {% include('software-card.html.twig') %}
                        {% endfor %}


        </div>
    </div>

    <aside id="share">
        <div class="hide-on-med-and-down">
            <a href=https://twitter.com/share?url={{ app.request.uri }}&via=Marketing_Automation" rel="nofollow"
               onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=500,width=700');return false;"
               class="mdi mdi-twitter mdi-36px mdi-light hidden"></a>
            <a href="http://www.facebook.com/sharer.php?u={{ app.request.uri }}" rel="nofollow"
               onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=500,width=700');return false;"
               class="mdi mdi-facebook mdi-36px mdi-light hidden"></a>
            <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ app.request.uri }}" rel="nofollow"
               onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=500,width=700');return false;"
               class="mdi mdi-linkedin mdi-36px mdi-light hidden "></a>
            <a href="https://buffer.com/add?url={{ app.request.uri }}" rel="nofollow"
               onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=500,width=700');return false;"
               class="mdi mdi-buffer mdi-36px mdi-light hidden "></a>
            <a class="mdi mdi-share-variant mdi-36px mdi-light "></a>
        </div>


        <div class="hide-on-large-only mobile">
            <a href=https://twitter.com/share?url= {{ app.request.uri }} &via=Marketing_automation" target="_blank"
               rel="nofollow"
               class="mdi mdi-twitter mdi-24px mdi-light hidden social"></a>
            <a href="http://www.facebook.com/sharer.php?u={{ app.request.uri }}" target="_blank" rel="nofollow"
               class="mdi mdi-facebook mdi-24px mdi-light hidden"></a>
            <a href="https://www.linkedin.com/shareArticle?mini=true&url= {{ app.request.uri }}" target="_blank"
               rel="nofollow"
               class="mdi mdi-linkedin mdi-24px mdi-light hidden social"></a>
            <a href="https://buffer.com/add?text={{ app.request.uri }}" target="_blank" rel="nofollow"
               class="mdi mdi-buffer mdi-24px mdi-light hidden social"></a>
            <a class="mdi mdi-share-variant mdi-24px mdi-light "></a>
        </div>
    </aside>

{% endblock %}
{% block javascripts %}{{ parent() }}
    <script type="text/javascript" src="{{ asset('assets/js/social.js') }}"></script>
{% endblock %}